<UserControl x:Class="EDS.ExplorerDriveNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EDS"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="300"
             Name="explorer_drive_node">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding ElementName=explorer_drive_node, Path=Height}"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Source="Images/ExplorerNode/Drive.png"></Image>
        <TextBlock Name="drive_text" Grid.Column="1" Text="A:" Foreground="#FF665FAE" FontSize="{Binding ElementName=explorer_drive_node, Path=Height}" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="20,0,0,0"></TextBlock>
    </Grid>
</UserControl>
